<div class="container">

    <h1>Lista de Tarefas</h1>
    
    <div class="row">
        {{#tarefas}}
              <div class="mybox">
                <h3>{{ titulo }}</h3><hr>
                <input type="hidden" name="id" id="id" value={{_id}}>
                <p>{{ descricao }}</p>
                <p><h6 class="text-danger">Criado por: {{ usuario }}</h6></p>
                <h6>{{ inscricao }}</h6>
                <div class="d-flex justify-content-end">
                    <a type="button" class="btn btn-success"  href="/concluir">Concluir</a>
                    <a type="button" class="btn btn-warning"  href="/editar">Editar</a>
                    <a type="button" class="btn btn-danger"  href="/remover/?id={{_id}}">Remover</a>
                </div>
            </div>
        {{/tarefas}}       
    </div>

</div>